{
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Run Admin",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/admin/node_modules/vite/bin/vite.js",
            "cwd": "${workspaceFolder}/admin"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Frontend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/frontend/node_modules/vite/bin/vite.js",
            "cwd": "${workspaceFolder}/frontend"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/server.js",
            "cwd": "${workspaceFolder}/backend"
        }
    ]
}
